@model List<Product>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Product List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
				Create New Product
			</a>
		</div>
		<div class="col-6">
		</div>
	</div>
	<table class="table table-bordered table-stripe">
		<thead>
			<th>Title</th>
			<th>Description</th>
			<th>Director</th>
			<th>Price</th>
			<th>Category</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Title</td>
					<td>
						@obj.Description
					</td>
					<td>
						@obj.Director
					</td>
					<td>
						@obj.Price
					</td>
					<td>
						@obj.Category.Name
					</td>
					<td>
						<div class="w-75 btn-group flex-end" role="group">
							<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>